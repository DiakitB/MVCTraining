@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"]!= null)
{
   
    <div class="alert alert-primary" role="alert">
        @TempData["success"]
    </div>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" asp-controller="CoverType" class="btn btn-primary">Create Cover Type</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Cover Type Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:50%">
                    @obj.Name
                </td>
                <td>
                    <a asp-controller="CoverType" asp-action="Edit" role="group" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i> Update</a>
                    <a asp-controller="CoverType" asp-action="Delete" role="group" asp-route-id="@obj.Id">Delete <i class="bi bi-trash"></i></a>
                </td>



            </tr>
        }
    </tbody>
</table>